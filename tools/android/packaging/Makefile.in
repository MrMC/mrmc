include ../../depends/Makefile.include

OBJS = libcurl.so
OBJS+= libcpluff.so
OBJS+= libass.so
OBJS+= libxbogg.so libxbvorbis.so libxbvorbisfile.so
OBJS+= libmpeg2.so libmpeg2convert.so
OBJS+= libnfs.so
OBJS+= libdsm.so
OBJS+= libsmbclient.so
OBJS+= libbluray.so
OBJS+= libplist.so
OBJS+= libshairplay.so
OBJS+= librtmp.so

PLATFORM_OBJS =
EXCLUDED_ADDONS += $(PKG_EXCLUDED_ADDONS)

ifeq ($(lite),yes)
  MEDIAROOT = media.lite
  SPLASHPNG = Splash.lite.png
else
  MEDIAROOT = media
  SPLASHPNG = Splash.png
endif
XBMCROOT = $(shell cd $(CURDIR)/../../..; pwd)
COPYDIRS = system addons $(MEDIAROOT)
GCC_VERSION=$(shell $(CC) -dumpversion)
ZIP=zip

SIGN_STORE=~/.android/@APP_NAME@.keystore
SIGN_STOREPASS=android
SIGN_KEY=androiddebugkey
SIGN_KEYPASS=

ifneq ($(strip $(SIGN_KEYPASS)),)
SIGN_KEYPASS_OPT=-keypass $(SIGN_KEYPASS)
endif

#this fixes a android ndk fuckup where the pathes to
#prebuilt stuff follow different name shemes for
#arm and x86
ifeq ($(findstring i686,$(CPU)),i686)
ARCH=x86
ABI=x86
else ifeq ($(findstring arm64,$(CPU)),arm64)
ARCH=arm64
ABI=arm64-v8a
else ifeq ($(findstring arm,$(CPU)),arm)
ARCH=arm
ABI=armeabi-v7a
endif

# libc++
STLLIB=$(TOOLCHAIN)/$(HOST)/lib/libc++_shared.so

#older ndk x86
GDBPATH=$(NDKROOT)/toolchains/$(ARCH)-$(GCC_VERSION)/prebuilt/gdbserver

ifneq ($(shell test -f $(GDBPATH) && echo 1),1)
#older ndk arm
GDBPATH=$(NDKROOT)/toolchains/$(HOST)-$(GCC_VERSION)/prebuilt/gdbserver
endif

ifneq ($(shell test -f $(GDBPATH) && echo 1),1)
#vanilla ndk >= 8
GDBPATH=$(NDKROOT)/prebuilt/android-$(ARCH)/gdbserver/gdbserver
endif

SRCLIBS = $(addprefix $(PREFIX)/lib/,$(OBJS)) $(addprefix $(PREFIX)/lib/$(SDK_PLATFORM)/,$(PLATFORM_OBJS))
DSTLIBS = $(ABI)/lib/lib@APP_NAME_LC@.so $(addprefix $(ABI)/lib/,$(OBJS)) $(addprefix $(ABI)/lib/,$(PLATFORM_OBJS))
libs= $(DSTLIBS)

all: apk

apk: apk-clean sharedapk package apk-sign

obb: apk-clean sharedobb

apk-unsigned: apk-clean sharedapk package

apk-obb: apk-clean sharedobb package apk-sign

apk-obb-unsigned: apk-clean sharedobb package

apk-noobb: apk-clean package apk-sign

xbmc/assets:
	mkdir -p build/assets

symbols: libs

shared:
	mkdir -p assets
	cp -rfp $(PREFIX)/share/@APP_NAME_LC@/* ./assets
	# depends build of binary pvr hardcodes path to mrmc
	cp -rfp $(PREFIX)/share/mrmc/addons/pvr.* ./assets/addons
	# depends build of repo-resources hardcodes path to mrmc
	cp -rfp $(PREFIX)/mrmc/repo-resources/* ./assets/addons
	# depends build of addons hardcodes path to mrmc
	cp -rfp $(PREFIX)/mrmc/addons/* ./assets/addons
	find `pwd`/assets/ -depth -name ".git" -exec rm -rf {} \;
	find `pwd`/assets/ -name "*.so" -exec rm {} \;
	find `pwd`/assets/addons/skin.*/media/* -depth -not -iname "Textures.xbt" -exec rm -rf {} \;
	find `pwd`/assets/system/keymaps/ -depth -name "joystick*.xml" ! -name "joystick.xml" -exec rm {} \;
	mv -f `pwd`/assets/system/keymaps/joystick.xml.sample `pwd`/assets/system/keymaps/joystick.xml
	cd `pwd`/assets/addons; rm -rf $(EXCLUDED_ADDONS)

sharedapk: shared | xbmc/assets
	cp -rfp assets/* ./build/assets

sharedobb: shared
	rm -f $(XBMCROOT)/main.@APP_NAME@.obb
	$(ZIP) -9 -q -r $(XBMCROOT)/main.@APP_NAME@.obb assets
	@echo "$(XBMCROOT)/main.@APP_NAME@.obb created"

python: | xbmc/assets
	mkdir -p build/assets/python2.7/lib/
	cp -rfp $(PREFIX)/lib/python2.7 build/assets/python2.7/lib/
	cd build/assets/python2.7/lib/python2.7/; rm -rf test config lib-dynload

res:
	mkdir -p build/src/@APP_PACKAGE_DIR@ build/res build/res/raw build/res/values build/res/xml images
	cp -rfp xbmc/res/* build/res/
	cp -rfp xbmc/jni build/
	@echo "native_arch=$(ABI)" > build/res/raw/xbmc.properties
	cp -fp $(XBMCROOT)/media/$(SPLASHPNG) build/res/drawable/splash.png
	cp -fp $(MEDIAROOT)/drawable-hdpi/ic_launcher.png build/res/drawable-hdpi/ic_launcher.png
	cp -fp $(MEDIAROOT)/drawable-ldpi/ic_launcher.png build/res/drawable-ldpi/ic_launcher.png
	cp -fp $(MEDIAROOT)/drawable-mdpi/ic_launcher.png build/res/drawable-mdpi/ic_launcher.png
	cp -fp $(MEDIAROOT)/drawable-xhdpi/ic_launcher.png build/res/drawable-xhdpi/ic_launcher.png
	cp -fp $(MEDIAROOT)/drawable-xxhdpi/ic_launcher.png build/res/drawable-xxhdpi/ic_launcher.png
	cp -fp $(MEDIAROOT)/drawable-xxxhdpi/ic_launcher.png build/res/drawable-xxxhdpi/ic_launcher.png
	cp -fp $(MEDIAROOT)/drawable-xhdpi/banner.png build/res/drawable-xhdpi/banner.png
	cp xbmc/strings.xml build/res/values/
	cp xbmc/colors.xml build/res/values/
	cp xbmc/activity_main.xml build/res/layout/
	cp xbmc/searchable.xml build/res/xml/
	mkdir -p tmp/res; $(AAPT) c -S build/res -C tmp/res; cp -r -n build/res tmp/ || true
	$(AAPT) p -f -I $(SDKROOT)/platforms/$(SDK_PLATFORM)/android.jar -S tmp/res/ -M xbmc/AndroidManifest.xml -F images/@APP_NAME@app-debug-skeleton.apk -J build/src/@APP_PACKAGE_DIR@
	@rm -rf tmp/

libs: $(PREFIX)/lib/@APP_NAME_LC@/lib@APP_NAME_LC@.so
	mkdir -p build/lib/$(ABI) build/assets/python2.7/lib/
	cp -fp $(SRCLIBS) build/lib/$(ABI)/
	cp -fp $(PREFIX)/lib/@APP_NAME_LC@/lib@APP_NAME_LC@.so build/lib/$(ABI)/
	# depends build of binary pvr hardcodes path to mrmc
	find $(PREFIX)/lib/mrmc/addons/pvr* -name "*.so" -exec cp -fp {} build/lib/$(ABI)/ \;
	find $(PREFIX)/lib/@APP_NAME_LC@/addons -name "*.so" -exec cp -fp {} build/lib/$(ABI)/ \;
	find $(PREFIX)/lib/@APP_NAME_LC@/system -name "*.so" -exec cp -fp {} build/lib/$(ABI)/ \; | true
	find $(PREFIX)/share/@APP_NAME_LC@/addons -name "*.so" -exec cp -fp {} build/lib/$(ABI)/ \;
	cd build/lib/$(ABI)/; find . -name "*.so" -not -name "lib*.so" | sed "s/\.\///" | xargs -I@ mv @ lib@
	$(STRIP) --strip-unneeded build/lib/$(ABI)/*.so
	install -p $(GDBPATH) ./build/lib/$(ABI)/gdbserver
	install -p $(STLLIB) ./build/lib/$(ABI)/
	echo "set solib-search-path ./obj/local/$(ABI)" > ./build/lib/$(ABI)/gdb.setup
	echo "directory $(TOOLCHAIN)/sysroot/usr/include $(NDKROOT)/sources/android/native_app_glue" \
	     "$(NDKROOT)/sources/cxx-stl/gnu-libstdc++/$(GCC_VERSION)/include $(XBMCROOT)  $(PREFIX)/include jni" >> ./build/lib/$(ABI)/gdb.setup

xbmc/classes.dex: res
	mkdir -p obj
	cd xbmc/src; find . -name "*.java" -exec cp -fp {} ../../build/src/@APP_PACKAGE_DIR@/{} \;
	@javac -source 1.7 -target 1.7 -classpath $(SDKROOT)/platforms/$(SDK_PLATFORM)/android.jar:obj -d obj -sourcepath build/src build/src/@APP_PACKAGE_DIR@/*.java xbmc/src/@APP_PACKAGE_DIR@/interfaces/*.java
	@$(DX) --dex --output=build/classes.dex obj build/lib

package: libs symbols python xbmc/classes.dex
	@echo "Creating package..."
	@cp images/@APP_NAME@app-debug-skeleton.apk images/@APP_NAME@app-debug-$(ABI)-unaligned.apk
	@cd build; $(ZIP) -r -q ../images/@APP_NAME@app-debug-$(ABI)-unaligned.apk lib/$(ABI) assets classes.dex

apk-sign:
	@echo "Signing..."
	@jarsigner -sigalg SHA1withRSA -digestalg SHA1 -tsa http://timestamp.digicert.com -keystore $(SIGN_STORE) -storepass $(SIGN_STOREPASS) $(SIGN_KEYPASS_OPT) images/@APP_NAME@app-debug-$(ABI)-unaligned.apk $(SIGN_KEY)
	@$(ZIPALIGN) -f 4 images/@APP_NAME@app-debug-$(ABI)-unaligned.apk $(XBMCROOT)/@APP_NAME@app-$(ABI)-debug.apk
	@rm images/@APP_NAME@app-debug-$(ABI)-unaligned.apk
	@echo "$(XBMCROOT)/@APP_NAME_LC@app-$(ABI)-debug.apk created"

$(PREFIX)/lib/xbmc/lib@APP_NAME_LC@.so: $(SRCLIBS)
	$(MAKE) -C ../../depends/target/xbmc

$(SRCLIBS):

apk-clean:
	rm -rf build
	rm -rf assets
	mkdir -p build

.PHONY: force libs assets python sharedapk sharedobb res package
