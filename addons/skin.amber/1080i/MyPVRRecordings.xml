<?xml version="1.0" encoding="UTF-8"?>
<window>
  <defaultcontrol always="true">50</defaultcontrol>
  <views>50</views>
  <controls>
    <include>Pvr_Art</include> 
    <include>Time</include>
    <control type="group">
      <include>OpenClose</include>
      <control type="group" description="REC group">
        <include>VisibleFadeEffect</include>
  	    <visible>Control.IsVisible(50)</visible>
        <include>MiniVideoWindow</include>
        <control type="list" id="50" description="REC">
          <posx>820</posx>
          <posy>120</posy>
          <width>1076</width>
          <height>892</height>
          <onleft>102</onleft>
          <onright>60</onright>
          <onup>50</onup>
          <ondown>50</ondown>
          <pagecontrol>60</pagecontrol>
          <scrolltime tween="sine" easing="inout">280</scrolltime>
          <itemlayout height="99">
            <control type="image">
              <posx>0</posx>
              <posy>0</posy>
              <height>99</height>
              <width>1076</width>
              <texture flipy="true" border="3">list/ListNF.png</texture>
            </control>
            <include>RecOverlay</include>
            <control type="image" description="Thumb">
              <posx>12</posx>
              <posy>14</posy>
              <height>74</height>
              <width>110</width>
              <align>center</align>
              <aligny>center</aligny>
              <aspectratio>keep</aspectratio>
              <colordiffuse>Label2</colordiffuse>
              <texture fallback="thumbs/MediaRecording.png">$INFO[ListItem.thumb]</texture>
            </control>
            <control type="label" description="Main Label">
              <posx>150</posx>
              <height>55</height>
              <width>800</width>
              <scroll>false</scroll>
              <label>$INFO[ListItem.Label]</label>
            </control>
            <control type="label" description="Label2">
              <posx>150</posx>
              <posy>40</posy>
              <height>60</height>
              <font>Details</font>
              <width>800</width>
              <scroll>false</scroll>
              <textcolor>Label2</textcolor>
              <label>$INFO[ListItem.Date]</label>
            </control>
            <control type="image">
              <left>980</left>
              <top>60</top>
              <width>33</width>
              <height>33</height>
              <texture>$VAR[Overlay]</texture>
            </control>
          </itemlayout>
          <focusedlayout height="99">
            <control type="image">
              <posx>0</posx>
              <posy>0</posy>
              <width>1076</width>
              <height>96</height>
              <texture>list/ListFO.png</texture>
            </control>
            <include>RecOverlay</include>
            <control type="image" description="Thumb">
              <posx>12</posx>
              <posy>14</posy>
              <height>74</height>
              <width>110</width>
              <align>center</align>
              <aligny>center</aligny>
              <aspectratio>keep</aspectratio>
              <colordiffuse>Label2</colordiffuse>
              <texture fallback="thumbs/MediaRecording.png">$INFO[ListItem.thumb]</texture>
            </control>
            <control type="label" description="Main Label">
              <posx>150</posx>
              <height>55</height>
              <width>800</width>
              <scroll>false</scroll>
              <label>$INFO[ListItem.Label]</label>
            </control>
            <control type="label" description="Label2">
              <posx>150</posx>
              <posy>40</posy>
              <height>60</height>
              <font>Details</font>
              <width>800</width>
              <scroll>false</scroll>
              <textcolor>Label2</textcolor>
              <label>$INFO[ListItem.Date]</label>
            </control>
            <control type="image">
              <left>980</left>
              <top>60</top>
              <width>33</width>
              <height>33</height>
              <texture>$VAR[Overlay]</texture>
            </control>
          </focusedlayout>
        </control>
      </control>
  	</control>
    <control type="group" description="REC group">
      <include>VisibleFadeEffect</include>
      <control type="group" description="INFO">
        <posx>60</posx>
        <posy>480</posy>
        <control type="label" description="Title above progress">
          <posy>-12</posy>
          <width>700</width>
          <font>InfoTitle</font>
          <textcolor>Highlight</textcolor>
          <aligny>center</aligny>
          <height>60</height>
          <wrapmultiline>true</wrapmultiline>
          <label>$INFO[Container(50).ListItem.Title]</label>
        </control>
        <control type="textbox" description="Plot Value for TV">
          <posx>0</posx>
          <posy>50</posy>
          <width>700</width>
          <height>411</height>
          <align>justify</align>
          <pagecontrol>-</pagecontrol>
          <label>$INFO[Container(50).ListItem.Plot]</label>
        </control>
        <control type="label">
          <posy>520</posy>
          <width>700</width>
          <height>36</height>
          <font>Details</font>
          <label>[COLOR=Grey]$LOCALIZE[2050]: [/COLOR]$INFO[Container(50).ListItem.Duration]</label>
        </control>
      </control>
    </control>
    <control type="scrollbar" id="60">
      <animation effect="slide" start="0,0" end="-8,0" time="150">Focus</animation>
      <animation effect="slide" start="-8,0" end="0,0" time="300">UnFocus</animation>
      <posx>21r</posx>
      <posy>99</posy>
      <width>36</width>
      <height>900</height>
      <texturesliderbackground>-</texturesliderbackground>
      <texturesliderbar>-</texturesliderbar>
      <texturesliderbarfocus>-</texturesliderbarfocus>
      <textureslidernib border="18">OSD/ScrollbarNibNF.png</textureslidernib>
      <textureslidernibfocus border="18">OSD/ScrollbarNibFO.png</textureslidernibfocus>
      <showonepage>false</showonepage>
      <orientation>vertical</orientation>
      <onleft>50</onleft>
      <onright>9000</onright>
    </control>
	  <include>PVRSideBlade</include>
  </controls>
</window>