<?xml version="1.0" encoding="UTF-8"?>
<window>
  <defaultcontrol always="true">50</defaultcontrol>
  <views>50</views>
  <controls>
    <include>Pvr_Art</include> 
    <include>Time</include>
    <control type="group">
      <include>OpenClose</include>
      <include>MiniVideoWindow</include>
      <control type="list" id="50" description="CHANNELS">
        <posx>820</posx>
        <posy>120</posy>
        <width>1076</width>
        <height>892</height>
        <onleft>100</onleft>
        <onright>60</onright>
        <onup>50</onup>
        <ondown>50</ondown>
        <pagecontrol>60</pagecontrol>
        <scrolltime tween="sine" easing="inout">280</scrolltime>
        <itemlayout height="99">
          <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <height>99</height>
            <width>1076</width>
            <texture flipy="true" border="3">list/ListNF.png</texture>
          </control>
          <include>RecOverlay</include>
          <control type="label" description="Number">
            <visible>!Skin.HasSetting(HideEPGLogos)</visible>
            <left>0</left>
            <height>99</height>
            <width>80</width>
            <align>center</align>
            <aligny>center</aligny>
            <label>$INFO[ListItem.ChannelNumberLabel]</label>
          </control>
          <control type="label" description="Number">
            <visible>Skin.HasSetting(HideEPGLogos)</visible>
            <left>0</left>
            <height>99</height>
            <width>80</width>
            <align>center</align>
            <aligny>center</aligny>
            <label>$INFO[ListItem.ChannelNumberLabel]</label>
          </control>
          <control type="image" description="TV Logo">
            <visible>!Skin.HasSetting(HideEPGLogos)</visible>
            <posx>80</posx>
            <posy>4</posy>
            <width>90</width>
            <height>90</height>
            <texture>$INFO[ListItem.Icon]</texture>
            <aspectratio>keep</aspectratio>
          </control>
          <control type="label" description="Main Label">
            <posx>186</posx>
            <height>55</height>
            <width>800</width>
            <scroll>false</scroll>
            <label>$INFO[ListItem.ChannelName]</label>
          </control>
          <control type="label" description="Label2">
            <posx>186</posx>
            <posy>38</posy>
            <height>55</height>
            <font>Details</font>
            <width>800</width>
            <scroll>false</scroll>
            <textcolor>Label2</textcolor>
            <label>$INFO[ListItem.Title]</label>
          </control>
          <control type="progress">
            <posx>186</posx>
            <posy>90</posy>
            <width>880</width>
            <height>2</height>
            <texturebg border="0,0,0,0">img/AmberDotBG.png</texturebg>
            <midtexture border="0,0,0,0">img/AmberDot.png</midtexture>
            <info>ListItem.Progress</info>
            <visible>ListItem.HasEpg</visible>
          </control>
        </itemlayout>
        <focusedlayout height="99">
          <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>1076</width>
            <height>99</height>
            <texture>list/ListFO.png</texture>
          </control>
          <include>RecOverlay</include>
          <control type="label" description="Number">
            <visible>!Skin.HasSetting(HideEPGLogos)</visible>
            <left>0</left>
            <posx>40</posx>
            <height>99</height>
            <width>80</width>
            <align>center</align>
            <aligny>center</aligny>
            <label>$INFO[ListItem.ChannelNumberLabel]</label>
          </control>
          <control type="label" description="Number">
            <visible>Skin.HasSetting(HideEPGLogos)</visible>
            <left>0</left>
            <posx>110</posx>
            <height>99</height>
            <width>80</width>
            <align>center</align>
            <aligny>center</aligny>
            <label>$INFO[ListItem.ChannelNumberLabel]</label>
          </control>
          <control type="image" description="TV Logo">
            <visible>!Skin.HasSetting(HideEPGLogos)</visible>
            <posx>80</posx>
            <posy>4</posy>
            <width>90</width>
            <height>90</height>
            <texture>$INFO[ListItem.Icon]</texture>
            <aspectratio>keep</aspectratio>
          </control>
          <control type="label" description="Main Label">
            <posx>186</posx>
            <height>55</height>
            <width>800</width>
            <label>$INFO[ListItem.ChannelName]</label>
          </control>
          <control type="label" description="Label2">
            <posx>186</posx>
            <posy>38</posy>
            <height>55</height>
            <font>Details</font>
            <width>800</width>
            <textcolor>Label2</textcolor>
            <label>$INFO[ListItem.Title]</label>
          </control>
          <control type="progress">
            <posx>186</posx>
            <posy>90</posy>
            <width>880</width>
            <height>2</height>
            <texturebg border="0,0,0,0">img/AmberDotBG.png</texturebg>
            <midtexture border="0,0,0,0">img/AmberDot.png</midtexture>
            <info>ListItem.Progress</info>
            <visible>ListItem.HasEpg</visible>
          </control>
        </focusedlayout>
      </control>
    </control>
    <control type="group" description="Info group">
      <visible>Control.IsVisible(50)</visible>
      <include>VisibleFadeEffect</include>
      <control type="group" description="INFO">
        <posx>60</posx>
        <posy>480</posy>
        <control type="image" description="TV Logo">
          <posy>-34</posy>
          <width>120</width>
          <height>120</height>
          <texture>$INFO[Container(50).ListItem.Icon]</texture>
          <aspectratio>keep</aspectratio>
        </control>
        <control type="label" description="Title above progress">
          <posy>99</posy>
          <width>700</width>
          <font>InfoTitle</font>
          <textcolor>Highlight</textcolor>
          <aligny>center</aligny>
          <height>60</height>
          <wrapmultiline>true</wrapmultiline>
          <label>$INFO[Container(50).ListItem.Title]</label>
        </control>
        <control type="textbox" description="Plot Value for TV">
          <posx>0</posx>
          <posy>161</posy>
          <width>700</width>
          <height>288</height>
          <align>justify</align>
          <pagecontrol>-</pagecontrol>
          <label>$INFO[Container(50).ListItem.Plot]</label>
        </control>
        <control type="label">
          <visible>Container(50).ListItem.HasEpg</visible>
          <posy>480</posy>
          <width>700</width>
          <height>36</height>
          <font>Details</font>
          <label>[COLOR=Grey]$LOCALIZE[142] [/COLOR]$INFO[Container(50).ListItem.StartTime,, / ]$INFO[Container(50).ListItem.EndTime]</label>
        </control>
        <control type="label">
          <posy>520</posy>
          <width>700</width>
          <height>36</height>
          <font>Details</font>
          <label>[COLOR=Grey]$LOCALIZE[19031]: [/COLOR]$INFO[Container(50).ListItem.NextTitle]</label>
        </control>
      </control>
    </control>
    <control type="scrollbar" id="60">
      <animation effect="slide" start="0,0" end="-8,0" time="150">Focus</animation>
      <animation effect="slide" start="-8,0" end="0,0" time="300">UnFocus</animation>
      <posx>21r</posx>
      <posy>99</posy>
      <width>36</width>
      <height>900</height>
      <texturesliderbackground>-</texturesliderbackground>
      <texturesliderbar>-</texturesliderbar>
      <texturesliderbarfocus>-</texturesliderbarfocus>
      <textureslidernib border="18">OSD/ScrollbarNibNF.png</textureslidernib>
      <textureslidernibfocus border="18">OSD/ScrollbarNibFO.png</textureslidernibfocus>
      <showonepage>false</showonepage>
      <orientation>vertical</orientation>
      <onleft>50</onleft>
      <onright>9000</onright>
    </control>
    <include>PVRSideBlade</include>
  </controls>
</window>